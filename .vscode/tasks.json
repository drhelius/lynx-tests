{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Clean",
            "osx": {
                "command": "make -f ${workspaceFolder}/${config:current_test}/Makefile clean",
                "options": {
                    "cwd": "${workspaceFolder}/${config:current_test}"
                },
                "problemMatcher": [
                    {
                        "base": "$gcc",
                        "fileLocation": [
                            "relative",
                            "${workspaceFolder}/${config:current_test}"
                        ]
                    }
                ],
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "showReuseMessage": false,
                "close": false,
                "clear": true,
                "revealProblems": "onProblem"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build (DEBUG)",
            "osx": {
                "command": "make -f ${workspaceFolder}/${config:current_test}/Makefile",
                "options": {
                    "cwd": "${workspaceFolder}/${config:current_test}"
                },
                "problemMatcher": [
                    {
                        "base": "$gcc",
                        "fileLocation": [
                            "relative",
                            "${workspaceFolder}/${config:current_test}"
                        ]
                    }
                ],
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "showReuseMessage": false,
                "close": false,
                "clear": true,
                "revealProblems": "onProblem"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Clean + Build (DEBUG)",
            "osx": {
                "command": "make -f ${workspaceFolder}/${config:current_test}/Makefile",
                "options": {
                    "cwd": "${workspaceFolder}/${config:current_test}"
                },
                "problemMatcher": [
                    {
                        "base": "$gcc",
                        "fileLocation": [
                            "relative",
                            "${workspaceFolder}/${config:current_test}"
                        ]
                    }
                ],
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "showReuseMessage": false,
                "close": false,
                "clear": true,
                "revealProblems": "onProblem"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Clean"
        }
    ]
}