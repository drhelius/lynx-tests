{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${env:GEARLYNX_HOME}/gearlynx",
            "cwd": "${env:GEARLYNX_HOME}",
            "args": ["${workspaceFolder}/${config:current_test}/${config:current_test}.lnx"],
            "MIMode": "lldb",
            "externalConsole": true,
            "stopAtEntry": false,
            "environment": [],
            "preLaunchTask": "Build (DEBUG)",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}